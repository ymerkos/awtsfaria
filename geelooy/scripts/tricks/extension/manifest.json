{
    "manifest_version": 3,
    "name": "AwtsmoosGPTify Extension",
    "version": "1.0.0",
    "permissions": [
        "activeTab",
        "scripting",
		"storage",
        "tabs"
    ],
    "host_permissions": [
        "*://*.awtsmoos.com/*",
        "https://chat.openai.com/*"
      ],
      "background": {
        "service_worker": "background.js"
    },
      
      "externally_connectable": {
        "matches": ["*://*.awtsmoos.com/*", "https://chat.openai.com/*"]
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "content_scripts": [{
        "matches":  [
			"*://*.awtsmoos.com/*",
			"*://*.chabad.org/*",
			"https://chat.openai.com/"
		],
        "js": ["content.js"]
    }]
}
