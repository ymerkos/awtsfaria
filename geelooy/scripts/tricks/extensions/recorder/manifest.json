{
    "manifest_version": 3,
    "name": "Audio and Video Recorder",
    "version": "1.0",
    "description": "Records audio from a tab and the entire screen.",
    "permissions": [
        "tabs",
        "tabCapture", 
        "desktopCapture",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost/*",
        "https://localhost/*",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  